<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="SpyglassTestView">
		<attr name="string_attr" format="string"/>
		<attr name="int_attr" format="integer"/>
		<attr name="boolean_attr" format="boolean"/>
		<attr name="color_attr" format="color"/>
		<attr name="dimension_attr" format="dimension"/>
		<attr name="float_attr" format="float"/>

		<attr name="enum_attr" format="enum">
			<enum name="const_0" value="0"/>
			<enum name="const_1" value="1"/>
			<enum name="const_2" value="2"/>
		</attr>

		<attr name="flag_attr">
			<flag name="flag_0" value="1"/>
			<flag name="flag_1" value="2"/>
			<flag name="flag_2" value="4"/>
		</attr>
	</declare-styleable>

	<!-- For testing def-style-attr behaviour in TestSpyglass -->
	<attr name="style_with_string_2" format="reference"/>
</resources>